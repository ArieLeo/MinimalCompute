#pragma kernel main

struct Particle
{
	float4 color;
};
RWStructuredBuffer<Particle> particleBuffer;

[numthreads(32,1,1)]
void main (uint3 id : SV_DispatchThreadID)
{
    //Rainbow color
	particleBuffer[id.x].color.r += 0.01f;
	particleBuffer[id.x].color.g += 0.005f;
	particleBuffer[id.x].color.b += 0.008f;
	particleBuffer[id.x].color = frac(particleBuffer[id.x].color);
}